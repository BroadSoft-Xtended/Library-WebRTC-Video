.bdsft-client
  .video
    position relative
    top 0px
    left 0px
    width 100%
    height auto

    .remote
      position absolute
      top 0%
      left 0%
      width 100%
      height 100%
      background-color #191414
      border-radius 4px
      border 2px solid #DDDDDD
      box-shadow 0px 0px 10px #000000
      border-radius 0px
      border none
      box-shadow 0 0 1px rgba(0, 0, 0, 0.05)
      background #000000
      background -moz-linear-gradient(top,  #181818 0%, #494949 100%)
      background -webkit-gradient(linear, left top, left bottom, color-stop(0%,#181818), color-stop(100%,#494949))
      background -webkit-linear-gradient(top,  #181818 0%,#494949 100%)
      background -o-linear-gradient(top,  #181818 0%,#494949 100%)
      background -ms-linear-gradient(top,  #181818 0%,#494949 100%)
      background linear-gradient(to bottom,  #181818 0%,#494949 100%)
      overflow hidden

    .localVideo
      position absolute
      top auto
      left 0
      bottom 0
      right auto
      width 25%
      height 25%
      background-color transparent
      video
        border-radius 0
        box-shadow none
        background #292929
        border 1px solid #3c3c3c
        cursor move
        width 100%
        height 100%
        position absolute
      .inner
        margin 5px
        position absolute
        top 0
        bottom 0
        right 0
        left 0

    .watermark-icon
      position absolute
      top 50%
      left 50%
      backface-visibility hidden
      transform translate(-50%,-50%)
      color rgba(255, 255, 255, 0.08)
      z-index 1
      font-size 265px
      text-align center
      width 100%

  .video.fullscreen-shown
      padding-bottom 0
      bottom 40px
      position absolute
      height auto !important

  :-webkit-full-screen
    .remote
      z-index 1
    .localVideo
      z-index 2

  :-webkit-full-screen .remote, 
  :-webkit-full-screen .localVideo
    border none
    border-radius 0


  .video.widescreen
      padding-bottom 56.25%

  .video.standard
      padding-bottom 75%

  .video.started
    .watermark-icon
      display none
      transform none
      box-shadow 0 0 1px rgba(0, 0, 0, 0.05)
    .remote
      box-shadow 0 0 1px rgba(0, 0, 0, 0.1)

  .video.connected
    .watermark-icon
      box-shadow 0 0 1px rgba(0, 0, 0, 0.05)

  .video.bl
    .localVideo
      top auto
      bottom 0
      left 0
      right auto

  .video.tl
    .localVideo
      top 0
      bottom auto
      left 0
      right auto

  .video.tr
    .localVideo
      top 0
      bottom auto
      left auto !important
      right 0

  .video.br
    .localVideo
      top auto
      bottom 0
      left auto !important
      right 0

  .video._1x
    .localVideo
      width 25%
      height 25%

  .video._2x
    .localVideo
      width 50%
      height 50%

  .video.audioOnly
    display none !important
    
  .video.enableSelfView:not(.video-hidden) .localVideo
    {fadeIn}

  .video.enableSelfView.video-hidden .localVideo
    {fadeOut}